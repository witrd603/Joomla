<?xml version="1.0" encoding="utf-8"?>

<form>
    <fieldset name="details">
        <field name="title" type="text" default="" size="50" required="true" hint="Enter membership title..."/>

        <field name="published" type="radio" default="0" filter="integer" required="true"
               class="btn-group btn-group-yesno">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="apply_to_sold" type="radio" default="0" filter="integer" class="btn-group btn-group-yesno">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>

    <fields name="restrictions">
        <fieldset name="restrictions">
        </fieldset>
    </fields>

    <field name="id" type="text" default="0" readonly="true" class="readonly"/>
</form>
