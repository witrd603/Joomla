<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/administrator/components/com_lovefactory/models/fields">

        <field name="id" type="text" default="0"
               readonly="true" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC"/>

        <field name="order_id" type="order" default="0"
               readonly="true" class="readonly"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_ORDER" description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_ORDER"/>

        <field name="user_id" type="user" default="0"
               readonly="true" class="readonly"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_USER" description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_USER"/>

        <field name="received_at" type="date" default="0" size="60"
               readonly="true" class="readonly"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_RECEIVED_AT"
               description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_RECEIVED_AT"/>

        <field name="payment_date" type="text" default="0" size="60"
               readonly="true" class="readonly"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_PAYMENT_DATE"
               description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_PAYMENT_DATE"/>

        <field name="amount" type="text" default="0"
               readonly="true" class="readonly"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_AMOUNT"
               description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_AMOUNT"/>

        <field name="currency" type="text" default="0"
               readonly="true" class="readonly"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_CURRENCY"
               description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_CURRENCY"/>

        <field name="gateway" type="gateway" default="0"
               readonly="true" class="readonly"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_GATEWAY"
               description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_GATEWAY"/>

        <field name="refnumber" type="text" default="0" size="60"
               readonly="true" class="readonly"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_REF_NUMBER"
               description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_REF_NUMBER"/>

        <field name="status" type="list" default="0"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_STATUS" description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_STATUS">
            <option value="10">COM_LOVEFACTORY_PAYMENT_STATUS_PENDING</option>
            <option value="20">COM_LOVEFACTORY_PAYMENT_STATUS_COMPLETED</option>
            <option value="30">COM_LOVEFACTORY_PAYMENT_STATUS_FAILED</option>
            <option value="40">COM_LOVEFACTORY_PAYMENT_STATUS_MANUAL_CHECK</option>
        </field>

    </fieldset>

    <fieldset name="errors">
        <field name="errors" type="textarea" default="" rows="10" cols="60"
               readonly="true" class="readonly" disabled="true"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_ERRORS"
               description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_ERRORS"/>
    </fieldset>

    <fieldset name="data">
        <field name="data" type="textarea" default="" rows="10" cols="60"
               readonly="true" class="readonly" disabled="true"
               label="COM_LOVEFACTORY_FORM_PAYMENT_LABEL_IPN" description="COM_LOVEFACTORY_FORM_PAYMENT_DESC_IPN"/>
    </fieldset>
</form>
