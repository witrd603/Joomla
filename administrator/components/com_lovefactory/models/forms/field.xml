               description="COM_LOVEFACTORY_FORM_FIELD_ADMIN_ONLY_EDITABLE_DESC">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="lock_after_save" type="list" default="0"
               label="COM_LOVEFACTORY_FORM_FIELD_LOCK_LABEL" description="COM_LOVEFACTORY_FORM_FIELD_LOCK_DESC">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>

    <field name="labels" type="FieldLabels"/>
    <field name="descriptions" type="FieldDescriptions"/>
    <field name="css" type="FieldCSS"/>
</form>
