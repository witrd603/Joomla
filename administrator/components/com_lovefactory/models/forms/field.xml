               readonly="true" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC"/>

        <field name="title" type="text" default="" size="50" required="true"
               label="COM_LOVEFACTORY_FORM_FIELD_TITLE_LABEL" description="COM_LOVEFACTORY_FORM_FIELD_TITLE_DESC"/>

        <field name="type" type="FieldType" required="true"
               label="COM_LOVEFACTORY_FORM_FIELD_TYPE_LABEL" description="COM_LOVEFACTORY_FORM_FIELD_TYPE_DESC"/>

        <field name="published" type="list" default="0" required="true"
               label="COM_LOVEFACTORY_FORM_FIELD_PUBLISHED_LABEL"
               description="COM_LOVEFACTORY_FORM_FIELD_PUBLISHED_DESC">
