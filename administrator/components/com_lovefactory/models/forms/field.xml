               label="COM_LOVEFACTORY_FORM_FIELD_VISIBILITY_LABEL"
               description="COM_LOVEFACTORY_FORM_FIELD_VISIBILITY_DESC">
            <option value="0">COM_LOVEFACTORY_FORM_FIELD_VISIBILITY_OPTION_PRIVATE</option>
            <option value="1">COM_LOVEFACTORY_FORM_FIELD_VISIBILITY_OPTION_PUBLIC</option>
            <option value="2">COM_LOVEFACTORY_FORM_FIELD_VISIBILITY_OPTION_FRIENDS</option>
        </field>

        <field name="user_visibility" type="list" default="0"
               label="COM_LOVEFACTORY_FORM_FIELD_USER_VISIBILITY_LABEL"
               description="COM_LOVEFACTORY_FORM_FIELD_USER_VISIBILITY_DESC">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="admin_only_viewable" type="list" default="0"
               label="COM_LOVEFACTORY_FORM_FIELD_ADMIN_ONLY_VIEWABLE_LABEL"
