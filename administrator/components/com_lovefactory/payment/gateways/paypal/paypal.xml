<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="params">
        <fieldset name="params">
            <!-- Email -->
            <field name="email" type="text" class="inputbox" size="60" default="" required="true"
                   label="FACTORY_PAYMENT_PLUGIN_PAYPAL_EMAIL_LABEL"
                   description="FACTORY_PAYMENT_PLUGIN_PAYPAL_EMAIL_DESC"/>

            <!-- Action -->
            <field name="action" type="text" class="inputbox" size="80" default="https://www.paypal.com/cgi-bin/webscr"
                   required="true"
                   label="FACTORY_PAYMENT_PLUGIN_PAYPAL_ACTION_LABEL"
                   description="FACTORY_PAYMENT_PLUGIN_PAYPAL_ACTION_DESC"/>

            <!-- Use sandbox -->
            <field name="use_sandbox" type="list" default="1"
                   label="FACTORY_PAYMENT_PLUGIN_PAYPAL_USE_SANDBOX_LABEL"
                   description="FACTORY_PAYMENT_PLUGIN_PAYPAL_USE_SANDBOX_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <!-- Action sandbox -->
            <field name="action_sandbox" type="text" class="inputbox" size="80"
                   default="https://www.sandbox.paypal.com/cgi-bin/webscr"
                   label="FACTORY_PAYMENT_PLUGIN_PAYPAL_ACTION_SANDBOX_LABEL"
                   description="FACTORY_PAYMENT_PLUGIN_PAYPAL_ACTION_SANDBOX_DESC"/>

            <!-- Button src -->
            <field name="button_src" type="text" class="inputbox" size="80"
                   default="https://www.paypal.com/en_US/i/btn/x-click-but23.gif"
                   label="FACTORY_PAYMENT_PLUGIN_PAYPAL_BUTTON_SRC_LABEL"
                   description="FACTORY_PAYMENT_PLUGIN_PAYPAL_BUTTON_SRC_DESC"/>
        </fieldset>
    </fields>
</form>
