<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.5" method="upgrade" client="site">
  <name>Love Factory Search</name>
  <description>Love Factory Search Module</description>
  <files>
    <filename module="mod_lovefactory_search">mod_lovefactory_search.php</filename>
    <filename>index.html</filename>
  </files>
  <languages>
    <language tag="en-GB">en-GB.mod_lovefactory_search.ini</language>
  </languages>
  <config>
    <fields name="params" addfieldpath="/administrator/components/com_lovefactory/lib/elements/">
      <fieldset name="basic">
        <field name="type" type="list" default="quick" label="MOD_LOVEFACTORY_SEARCH_SEARCH_TYPE_LABEL" description="MOD_LOVEFACTORY_SEARCH_SEARCH_TYPE_DESC">
          <option value="quick">MOD_LOVEFACTORY_SEARCH_SEARCH_TYPE_QUICK_LABEL</option>
          <option value="advanced">MOD_LOVEFACTORY_SEARCH_SEARCH_TYPE_ADVANCED_LABEL</option>
        </field>
        <field name="Itemid" type="menuitem" label="MOD_LOVEFACTORY_SEARCH_ITEMID_LABEL" description="MOD_LOVEFACTORY_SEARCH_ITEMID_DESC">
          <option value=""/>
        </field>
      </fieldset>
      <fieldset name="advanced">
        <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
      </fieldset>
    </fields>
  </config>
  <version>4.4.7</version>
  <author>thePHPfactory</author>
  <copyright>SKEPSIS Consult SRL</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail>contact@thephpfactory.com</authorEmail>
  <authorUrl>http://www.thephpfactory.com</authorUrl>
  <url>http://www.thephpfactory.com</url>
  <creationDate>May 2009</creationDate>
</extension>
